@model Weather;
@{
    ViewData["Title"] = "Results page";
}

<div class="text-center">
    <h1 class="display-4">Bem-vindo à Aplicação Web WC de Metereologia!</h1>
@*    <h2>@Model.LocationName</h2>
*@    <h3>Seguem as previsões para a cidade de @Model.LocationName</h3>
    <br />
    <div>
     <!--Div para mostrar potenciais erros--> 
     @if(ViewData["api_error"]!=null)
        {
                <div class='alert-danger'><label>@ViewData["api_error"]</label></div><br/>
                <a href="Main">Retroceder</a>
        }
        else
        {
        <p>
          <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1" aria-expanded="false" aria-controls="multiCollapseExample2">Ver info previsões</button>
          <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2" aria-expanded="false" aria-controls="multiCollapseExample1 multiCollapseExample2">Ver info estações</button>
        </p>
        <div class="row">
          <div class="col">
            <div class="collapse multi-collapse" id="collapse1">
              <div class="card card-body">
                    <table class="table table-striped table-hover">
                             <h4 style ="color:cornflowerblue">
                            <b>
                                @foreach(string data in ViewBag.WeatherInfo)
                                {
                                    <tr><td>
                                        @data
                                    </td>
                                    </tr>
                                }
                            </b>
                        </h4>
                    </table>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="collapse multi-collapse" id="collapse2">
              <div class="card card-body">
                        <table class="table table-striped table-hover">
                             <h4 style ="color:cornflowerblue">
                            <b>
                                @foreach(string data in ViewBag.StationsInfo)
                                {
                                    <tr><td>
                                        @data
                                    </td>
                                    </tr>
                                }
                            </b>
                        </h4>
                    </table>
              </div>
            </div>
          </div>
        </div>

        }

        <!--Exibir resultado da chamada da API-->
    </div>
</div>
