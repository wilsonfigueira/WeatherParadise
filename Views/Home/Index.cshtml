@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Authentication.cshtml";
}
<main class="form-signin w-5 m-auto">
    <form asp-action="validation">
        <img class="mb-4" src="css/Image/weather-icon-png-2.png" alt="" width="88" height="89">
        <h1 class="h3 mb-3 fw-normal">Olá! </h1>
        <h1 class="h3 mb-3 fw-normal">Por favor, efetue o Login.</h1>


        <div class="form-floating">
            <input type="email" class="form-control" id="floatingInput" name="username" placeholder="name@example.com">
            <label for="floatingInput">Endereço de E-mail</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password">
            <label for="floatingPassword">Palavra-passe</label>
        </div>

        <!--Authentication warning message-->
        @if(ViewData["auth_error"]!=null)
        {
            <div class='alert-danger'><label>@ViewData["auth_error"]</label></div><br/>       
        }
        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
    </form>
</main>
